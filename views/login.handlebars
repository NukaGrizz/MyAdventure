<body class="my-login-page">
	<section class="h-100">
		<div class="container h-100 custom-width">
					<div class="card fat">
						<main class="card-body">
							<h4 class="card-title header-text">Adventure <br> is <br> Waiting </h4>
							<p>
							 Join the storm and boost your adventure
							</p>
						
							<form method="POST" class="my-login-validation" novalidate="">
								<div tabindex="1" class="form-group">
									<label for="email">E-Mail Address</label>
									<input id="email" type="text" class="form-control input-style" name="email" value="" required autofocus>
									<div class="invalid-feedback">
										Email is invalid
									</div>
								</div>

								<div tabindex="2" class="form-group">
									<label for="password">Password
										<a href="forgot.html" class="float-right">
											Forgot Password?
										</a>
									</label>
									<input id="password" type="password" class="form-control input-style" name="password" required data-eye>
								    <div class="invalid-feedback">
								    	Password is required
							    	</div>
								</div>

								<div class="form-group">
									<div class="custom-checkbox custom-control">
										<input type="checkbox" name="remember" id="remember" class="custom-control-input">
										<label for="remember" class="custom-control-label">Remember Me</label>
									</div>
								</div>

								<div tabindex="3"class="form-group m-0 login-button-container">
									<button type="submit" class="btn btn-primary btn-block login-button">
										Login
									</button>
								</div>
								<div class="mt-4 text-center">
									Don't have an account? <a href="register.html">Create One</a>
								</div>
							</form>
						</main>
					</div>
					<div class="footer">
						
					</div>
				
			</div>
		</div>
	</section>

