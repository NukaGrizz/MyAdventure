<a class="post-pad post-title" href="/post/{{id}}" target="_blank">{{title}}</a>
<div class="interPostContainer">
<article class="post-pad">
  <img class="post-userImg"src="{{user.user_img_url}}">
  <span>{{format_url post_text}}</span>
  <div class="row post-aligntextright stayBetween">
    <a class="post-aligntextright">by {{user.username}} on {{format_date created_at}}</a>
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>

